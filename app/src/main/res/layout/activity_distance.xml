<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".runactivity.set.RunningDistanceActivity">

    <Button
        android:id="@+id/km2_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="2Km"
        app:layout_constraintBottom_toTopOf="@+id/km6_btn"
        app:layout_constraintEnd_toStartOf="@+id/km4_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/km6_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        android:text="6Km"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/km10_btn"
        app:layout_constraintEnd_toStartOf="@+id/km8_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/km2_btn" />

    <Button
        android:id="@+id/km10_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="180dp"
        android:text="10Km"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/km_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/km6_btn" />

    <Button
        android:id="@+id/km4_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        android:text="4Km"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/km8_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/km2_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/km8_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        android:text="8Km"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/km_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/km6_btn"
        app:layout_constraintTop_toBottomOf="@+id/km4_btn" />

    <Button
        android:id="@+id/km_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="180dp"
        android:text="사용자 지정"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/km10_btn"
        app:layout_constraintTop_toBottomOf="@+id/km8_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>